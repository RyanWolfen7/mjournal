{
  "extends": [
    "standard", "eslint:recommended"
  ],
  "rules": {
    "block-scoped-var": "error",
    "consistent-this": ["error", "self"],
    "func-style": ["error", "declaration"],
    "max-len": ["warn", 80, 2],
    "max-nested-callbacks": ["error", 4],
    "no-console": "off",
    "no-else-return": "error",
    "no-eq-null": "error",
    "no-nested-ternary": "error",
    "no-process-exit": "off",
    "no-sync": "error",
    "no-ternary": "error",
    "no-undefined": "error",
    "no-warning-comments": ["error", {"terms": ["@bug"]}],
    "valid-jsdoc": "error"
  }
}
