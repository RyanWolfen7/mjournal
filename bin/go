#!/bin/sh
cd $(dirname "${0}")/..
case "${1}" in
  start)
   exec coffee --nodejs --debug=9091 ./app/server.coffee
  ;;
  inspector)
    exec node-inspector --web-port=9092
  ;;
  test)
    exec ./bin/test.sh
  ;;
  testdebug)
    exec ./bin/test.sh --debug
  ;;
  postgres)
    pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start
  ;;
esac
