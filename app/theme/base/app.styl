@require "icomoon/style.css"

body
  margin 0 auto
  max-width 30em
  font-size 18px
  +above("s")
    font-size 24px
  padding-bottom 3em // leave room for scroll-to-top button


a
  text-decoration none

h1, h2, h3
  margin 0.2em

label
  display block

input[type=submit]
  display block

button()
  cursor pointer
  outline none
  padding 0.5em 0.8em
  text-decoration none

button
  button()
  &:disabled
    cursor not-allowed

.menu-bar
  position absolute
  top 0.5em
  right 0.5em
  font-size 16px

.error
  font-size 16px

.fixed-error
  position fixed
  top 10px // same as spinner
  left 2em
  font-size 36px

.smallText
  display inline
  +above("m")
    display none

.fullText
  display none
  +above("m")
    display inline

