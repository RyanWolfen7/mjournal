.toolbar
  width 100%
  position relative
  text-align center
  margin-bottom 0.5em
  input
    min-width 15em
    height 2em
  .clearTextSearch
    background-color $charcoal
    &.hidden
      visibility hidden
  .smallText
    display inline
    +above("s")
      display none
  .fullText
    display none
    +above("s")
      display inline
  .previous
    position absolute
    top 0
    left 1em
  .next
    position absolute
    top 0
    right 1em
