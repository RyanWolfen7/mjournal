@import '../../colorPalette'

.entry
  border-top 1px dashed $border1
  position relative
  p
    white-space pre-wrap
  .body
    margin 0
    padding 20px 0
    outline 0
  .info
    background-color $background2
    border-radius 50%
    display none
    min-width 1em
    position absolute
    right 0
    text-align center
    top 0
  &:hover .info
    display block
  &:nth-child(even)
    background-color $background2
p.body.new
  background-color $backgroundAccent1
  height 4em
  border 1px solid $border1
  outline 0
  &:not(:focus):after
    color white
    content "Type here\2026"
    font-size 40px
    font-style italic
    padding .5em
