.entry
  border-top 1px dashed #ccc
  position relative
  p
    white-space pre-wrap
  .info
    background-color #aaa
    border-radius 50%
    display none
    min-width 1em
    position absolute
    right 0
    text-align center
    top 0
  &:hover .info
    display block
p.body.new
  background-color #ccc
  height 4em
  border 1px solid #aaa
