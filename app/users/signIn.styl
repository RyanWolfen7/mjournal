@require "angular-quick-dialog/angular-quick-dialog.css"

.quick-dialog
  background-color $bagels

.sign-in
  margin 0 auto
  width 25em
  padding-left 1em
  font-family sans-serif
  margin-bottom 2em //allows error to show up

  h3
    font-size 14px
  input
    font-size 18px
    border-radius 0.5em
    border none

  input[type=submit]
    margin-top 1em

  input[type=email], input[type=password]
    padding 0.1em
    outline none
    width 15em
  input[type=password]
    display block
  .register, .signIn
    button()
    display inline-block
    &:disabled
      cursor not-allowed
  .register
    float left
    color $text2
    background-color $tunnel
