extends ../layout
block body
  div(ng-controller="signIn").sign-in
    div.error(ng-bind="error")
    form(ng-submit="signIn($event)")
      label email
      input(type="email" ng-model="email")
      label password
      input(type="password" ng-model="password")
      input.signIn(
        type="submit"
        value="Sign In"
        ng-disabled="!(email && password)"
      )
      input.register(
        type="submit"
        value="Register"
        ng-disabled="!(email && password)"
        ng-click="signIn($event, true)"
      )
