@require "angular-quick-dialog/angular-quick-dialog.css"

.sign-in
  margin 0 auto
  width 25em
  padding-left 1em
  margin-bottom 2em //allows error to show up

  h3
    font-size 14px
  input
    font-size 18px

  input[type=submit]
    margin-top 1em

  input[type=email], input[type=password]
    padding 0.1em
    padding-left 0.4em
    outline none
    width 15em
  input[type=password]
    display block
  .register, .signIn
    button()
    display inline-block
    &:disabled
      cursor not-allowed
    margin-right 2em
  .register
    float left

.about
  margin-top 2em
  h3
    font-size 18px

  li
    font-size 14px
    font-style italic
    margin-bottom 1em
    list-style-type none
