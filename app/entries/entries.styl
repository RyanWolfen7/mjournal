.entry
  position relative
  p
    white-space pre-wrap
  .created
    text-align right
    font-size 16px
    font-style italic
  .meta-row
    display flex
    justify-content space-between
  .body
    margin 0
    padding 0.2em 0
    outline 0
    line-height 1.4em
  .info
    display none
    min-width 1em
    text-align center
    top 0
  &:hover .info
    display block
  .meta
    visibility hidden
  &:hover .meta
    visibility visible
  .delete-entry
    font-size 12px
    padding 0.1em
    line-height 1.4em
    &:hover
      cursor pointer

.add-tag
  width 1em
  cursor pointer
  margin-bottom -0.2em

label.new
  margin-top 0.5em
  margin-bottom 0.5em

input.tags.new
  font-size 24px
  min-width: 15em

.scroll-to-top
  position fixed
  bottom 1em
  right 1em

button.next
  float right
