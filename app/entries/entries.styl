@import "site/colorPalette"

.notebook
  margin-top 1em;
  border-radius 1em
  border 1.5em solid $border2
  border-top-width 1em
  border-bottom-width 1em
  background-color $border2

.page
  // background-color $bagels
  margin-top 0.5em
  background url(grid.gif)
  border-radius 1em
  box-shadow -8px 8px $tunnel

.entry
  position relative
  padding 0.5em
  padding-bottom 0.2em
  border-bottom 0.05em dashed $tunnel
  &:first-child
    // margin-top -@margin-top
  &:last-child
    border none
  p
    white-space pre-wrap
  .created
    text-align right
    font-size 16px
    font-style italic
  .body
    margin 0
    padding 0.2em 0
    outline 0
  .info
    background-color $background2
    border-radius 50%
    display none
    min-width 1em
    position absolute
    right 0
    text-align center
    top 0
  &:hover .info
    display block
  .meta
    visibility hidden
  &:hover .meta
    visibility visible

button.add-tag
  text-transform uppercase

p.body.new
  background-color $background1
  height 4em
  border-radius 0.5em
  padding-left 1em
  outline 0
  overflow-y auto
  &:not(:focus):after
    color $text1
    content "Type a new entry here\2026"
    font-style italic
    padding .5em

input.tags.new
  background-color $background1
  font-size 24px
  min-width: 15em
