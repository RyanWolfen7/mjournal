//ng-tag-input overrides
tags-input
  display inline
  .host
    display inline-block
    width 100%
  .tags
    -webkit-appearance initial
    border none
    box-shadow none
    &.focused
      box-shadow none
    .tag-item
      background initial
      span
        cursor pointer
      .remove-button
        visibility hidden
      &:hover .remove-button
        visibility visible
    .tag-list
      display inline
