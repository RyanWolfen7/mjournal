@require "site/colorPalette"

ul.mj-tags
  display inline-block
  margin 0
  padding-left 0.2em
  li
    background-color $smoke
    border-radius 0.5em
    color $charcoal
    display inline-block
    font-size 18px
    list-style-type none
    margin 0 0.2em
    padding 0 0.4em
    padding-bottom 5px
    &:hover .mj-tag-remove
        visibility visible

.mj-tag-remove
  visibility hidden
  color $past
  cursor pointer
